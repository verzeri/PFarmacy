                        debugLog(`Errore: ${error.message}`);
                        if (attemptsLeft <= 1) {
                            reject(error);
                            return;
                        }
                        
                        debugLog(`Nuovo tentativo tra ${delay}ms...`);
                        setTimeout(() => attempt(attemptsLeft - 1), delay);
